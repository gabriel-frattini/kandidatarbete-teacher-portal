<%- include('partials/header.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <div class="card shadow">
        <div class="card-header bg-white bg-success text-(--darkblue) text-center">
          <h2>Welcome!</h2>
        </div>
        <div class="card-body text-center">
          <h4>You are logged in</h4>
          <!-- Navigation Buttons -->
          <form method="get" class="mt-4">
            <div class="d-grid gap-2">
              <button
                type="submit"
                class="btn btn-primary light-btn"
                formaction="/showall"
              >
                Tentor
              </button>
              <button type="submit" class="btn btn-secondary white-btn" formaction="/new">
                Skapa En Tenta
              </button>
            </div>
          </form>

          <!-- Display Message -->
          <% if (locals.message) { %>
          <div class="alert alert-info mt-4" role="alert">
            <%= locals.message %>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
