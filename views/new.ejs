<%- include('partials/header.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white text-center">
          <h4>Create a New Tenta</h4>
        </div>
        <div class="card-body">
          <form action="/new" method="post">
            <!-- Course Input -->
            <div class="mb-3">
              <label for="course" class="form-label">Course Name</label>
              <input
                type="text"
                name="course"
                id="course"
                class="form-control"
                placeholder="Enter the course name"
                required
              />
            </div>

            <!-- Questions List -->
            <div class="mb-3">
              <label class="form-label">Questions</label>
              <ul class="list-unstyled questions-list">
                <li class="questions">
                  <input
                    type="text"
                    name="questions"
                    class="form-control mb-2"
                    placeholder="Question 1"
                    required
                  />
                </li>
              </ul>
            </div>

            <!-- Buttons for Adding and Removing Questions -->
            <div class="d-flex justify-content-between">
              <button id="removeQ" type="button" class="btn btn-danger btn-sm">
                Remove Question
              </button>
              <button id="newQ" type="button" class="btn btn-secondary btn-sm">
                Add Question
              </button>
            </div>

            <!-- Submit Button -->
            <div class="mt-4">
              <button id="submit" type="submit" class="btn btn-success w-100">
                Make Tenta
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="new.js"></script>
<%- include('partials/footer.ejs') %>
